{
    "version": 2,
    "builds": [
        {
            "src": "next.config.js",
            "use": "@vercel/static-build"
        },
        {
            "src": "src/app/api/**/*.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        { "src": "/api/(.*)", "dest": "src/app/api/$1" },
        { "src": "/(.*)", "dest": "/" }
    ]
}
